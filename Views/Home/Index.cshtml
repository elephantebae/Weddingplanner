@using System;
@using System.Collections.Generic;
@using weddingplanner.Models;
@model LoginAndReg;
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Hello!</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/style.css"/>

    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <h1 class="text-center">Register</h1>
                    </div>
                    <form asp-action="Register" method="post">
                        <div class="row">
                            <div class="col-sm-3">
                                <span asp-validation-for="regmodel.FirstName"></span>
                                <label asp-for="regmodel.FirstName">First Name:</label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="regmodel.FirstName" class="form-control"></input>
                            </div>    
                        </div>
                        <div class="row" style="margin-top:2%;">
                            <div class="col-sm-3">
                                <span asp-validation-for="regmodel.LastName"></span>
                                <label asp-for="regmodel.LastName">Last Name:</label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="regmodel.LastName" class="form-control">
                            </div>    
                        </div>
                        <div class="row" style="margin-top:2%;">
                            <div class="col-sm-3">
                                <span asp-validation-for="regmodel.Email"></span>
                                <label asp-for="regmodel.Email">Email:</label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="regmodel.Email" class="form-control">
                            </div>    
                        </div>
                        <div class="row" style="margin-top:2%;">
                            <div class="col-sm-3">
                                <span asp-validation-for="regmodel.Password"></span>
                                <label asp-for="regmodel.Password">Password:</label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="regmodel.Password" class="form-control">
                            </div>    
                        </div>
                        <div class="row" style="margin-top:2%;">
                            <div class="col-sm-3">
                                <span asp-validation-for="regmodel.confirm"></span>
                                <label asp-for="regmodel.confirm">Confirm Password:</label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="regmodel.confirm" class="form-control">
                            </div>    
                        </div>
                        <div class="row text-center" style="margin-top: 2%;">
                            <button type="regmodel.submit" class="btn-primary">Register</button>
                        </div> 
                    </form>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <h1 class="text-center">Login</h1>
                    </div>
                    <form asp-action="Login" method="post">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="row">
                                    <span asp-validation-for="logmodel.Email"></span>
                                </div>
                                <div class="row">
                                    <label asp-for="logmodel.Email">Email </label>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="logmodel.Email" class="form-control">
                            </div>
                        </div>
                        <div class="row" style="margin-top:2%;">
                            <div class="col-sm-4">
                                <span asp-validation-for="logmodel.Password"></span>
                                <label asp-for="logmodel.Password">Password </label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="logmodel.Password" class="form-control">
                            </div>
                        </div>
                        <div class="row text-center" style="margin-top: 2%;">
                            <button type="submit" class="btn-primary">Log In</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </body>
</html>